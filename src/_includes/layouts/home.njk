{% extends 'layouts/base.njk' %}
{% set pageType = 'Homepage' %}

{# Intro content #}
{% set introHeading = title %}

{% set introSummary %}
  {{ content | safe }}
{% endset %}

{# Post list content #}
{% set postListHeading = postsHeading %}
{% set postListItems = collections.postFeed %}

{# Portfolio list content #}
{% set portfolioListHeading = ' ' %}
{% set portfolioListItems = collections.portfolioFeed %}

{# Archive link #}
{% if postListItems.length < collections.posts.length %}
  {% set paginationNextText = archiveButtonText %}
  {% set paginationNextUrl = '/archive' %}
{% endif %}

{# Portfolio link #}
{% if portfolioListItems.length < collections.portfolio.length %}
  {% set paginationNextText = archiveButtonText %}
  {% set paginationNextUrl = '/work' %}
{% endif %}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro-home.njk" %}
  </main>
{% endblock %}
